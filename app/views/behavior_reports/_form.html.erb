<div class="row text-center">
  <div class="small-12 medium-8 medium-centered columns">

    <div class="panel">

      <%= form_for @behavior_report do | f | %>

        <%= f.collection_select :behavior_id, current_client.behaviors.active, :id, :description, label: "Behavior" %>

        <%= f.number_field :occurrences, :in => 0..100, :step => 1, :value => 1, label: "Number of Occurrences" %>

        <%= f.submit "Submit Report", id: "submit-report", class: "button expand" %>

      <% end %>

    </div>

  </div>
</div>