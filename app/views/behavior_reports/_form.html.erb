<div class="row text-center">
  <div class="small-12 medium-8 medium-centered columns">

    <div class="panel">

      <%= form_for @behavior_report do | f | %>

        <% if @behavior_report.errors.any? %>
          <div class="alert-box warning text-center">
            <h5><%= pluralize(@behavior_report.errors.count, "error") %> prohibited this report from being submitted:</h5>
            <ul>
              <% @behavior_report.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.label :behavior_id, "Behavior" %>
        <%= f.collection_select :behavior_id, current_client.behaviors, :id, :description %>

        <%= f.label :occurrences, "Number of Occurrences" %>
        <%= f.number_field :occurrences, :in => 0..100, :step => 1, :value => 1 %>

        <%= f.submit "Submit Report", class: "button expand" %>

      <% end %>

    </div>

  </div>
</div>