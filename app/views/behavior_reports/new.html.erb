<% content_for :title, "New Behavior Report" %>

<div class="row ">
  <div class="col-xs-12">
    <h1>Submit Behavior Report</h1>
  </div>
</div>

<% if current_client.behaviors.active.size > 0 %>
  <%= render 'form' %>
<% else %>
  <div class="row ">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-body">You do not have any assigned behaviors.</div>
      </div>
    </div>
  </div>
<% end %>

<div class="row ">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to logout_path, method: "delete", class: "btn btn-danger " do %>
          <i class="fa fa-sign-out"></i>&emsp;Log Out
        <% end %>
      </div>
    </div>
  </div>
</div>
