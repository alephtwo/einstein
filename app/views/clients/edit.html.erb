<% content_for :title, "Edit Client" %>

<div class="row text-center">
  <div class="small-12 columns">
    <h1>Edit Client (ID #<%= @client.id %>)</h1>
  </div>
</div>

<%= form_for @client do | f | %>

  <div class="row text-center">
    <div class="small-12 medium-8 medium-centered columns">
      
      <div class="panel">
      
        <% if @client.errors.any? %>
          <div class="alert-box warning text-center">
            <h5><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h5>
            <ul>
              <% @client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name %>

        <div class="row">
          <div class="small-12 medium-6 columns">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
          <div class="small-12 medium-6 columns">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <% if user_signed_in? && current_user.is_admin %>
          <div class="row">
            <div class="small-12 columns">
              <%= f.label :user_id, "Assigned To" %>
              <%= f.collection_select :user_id, User.all, :id, :email %>
            </div>
          </div>
        <% end %>

        <%= f.submit class: "button expand" %>
      
      </div>

    </div>
  </div>

<% end %>