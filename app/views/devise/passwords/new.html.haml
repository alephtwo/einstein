- content_for :title, "Password Recovery"
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :basic) do |f|
  = devise_error_messages!
  .panel.panel-default
    .panel-heading
      %h2 Forgot your password?
    .panel-body
      = f.email_field :email, autofocus: true
      = f.submit "Send me reset password instructions", class: "btn btn-primary "
      = link_to root_path, class: "btn btn-info" do
        %i.fa.fa-undo
        Back
