<% client_sign_out if client_signed_in? %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row text-center">
    <div class="small-12 medium-8 medium-centered columns">
      <div class="panel">

        <h1>Staff Log In</h1>
        <hr />

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>

        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

        <% if devise_mapping.rememberable? -%>
          Remember Me
          <div class="switch"><%= f.check_box :remember_me %><%= f.label :remember_me, "Remember Me" %></div>
        <% end -%>

        <%= f.submit "Log In", class: "button expand" %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
<% end %>

