<% content_for :title, "Staff Login" %>

<% client_sign_out if client_signed_in? %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row text-center">
    <div class="small-12 medium-8 medium-centered columns">
      <div class="panel">

        <h1>Staff Login</h1>
        <hr />

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>

        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

        <% if devise_mapping.rememberable? -%>
          Remember Me
          <div class="switch"><%= f.check_box :remember_me %><%= f.label :remember_me, "Remember Me" %></div>
        <% end -%>

        <hr />

        <%= button_tag type: "submit", class: "button expand" do %>
          <i class="fa fa-sign-in"></i>&emsp;Log In
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
    <%= link_to "Client Login", login_path, class: "button success" %>
  </div>
<% end %>

