<% content_for :title, "Staff Login" %>
<% client_sign_out if client_signed_in? %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), layout: :basic) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Staff Login</h1>
    </div>
    <div class="panel-body">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
      <% end -%>
    </div>
    <div class="panel-footer">
      <%= button_tag type: "submit", class: "btn btn-primary " do %>
        <i class="fa fa-sign-in"></i>&emsp;Log In
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
<%= link_to "Client Login", login_path, class: "btn btn-success" %>
