<% if user_signed_in? %>
<div class="row text-center">
  <div class="small-12 columns">
    <div class="panel callout">
      <i class="fa fa-key"></i>&emsp;Signed in as <strong><%= current_user.email %></strong>
      <br />
      Last sign in: on <strong><%= current_user.last_sign_in_at.in_time_zone("Central Time (US & Canada)").to_formatted_s(:long) %></strong> by IP Address <strong><%= current_user.last_sign_in_ip %></strong>. 
    </div>
  </div>
</div> 
<% end %>

<div class="row text-center">
  <div class="small-4 columns small-centered">
    <%= image_tag "https://www.positivessl.com/images-new/PositiveSSL_tl_trans2.png" %>
    <br />
  </div>
</div>

<div class="row text-center">
  <div class="small-12 columns">
    <small><i class="fa fa-check-circle"></i>&emsp;<%= `git describe --always` %></small>
  </div>
</div>

<% if Rails.env.development? %>
<div class="row">
  <div class="small-12 columns">
    <hr />
    <div class="panel callout">
      <%= debug(params) %>
    </div>
  </div>
</div>
<% end %>
