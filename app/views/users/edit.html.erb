<% content_for :title, "Editing User" %>

<div class="row text-center">
  <div class="small-12 medium-8 medium-centered columns">

    <h1>Edit User</h1>
    <hr />
    <div class="panel">
      <%= form_for @user do | f | %>

        <% if user_signed_in? && @user == current_user %>
          <%= link_to edit_user_registration_path, class: "button" do %>
            <i class="fa fa-key"></i>&emsp;Change Password
          <% end %>
        <% end %>

        <%= f.text_field :email %>
        <%= f.text_field :first_name, label: "First Name" %>
        <%= f.text_field :last_name, label: "Last Name" %>

        <%= f.submit class: "button expand" %>

      <% end %>
    </div>

  </div>
</div>