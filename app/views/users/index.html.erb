<div class="row text-center">
  <div class="small-12 columns">

    <h1>All Users</h1>

    <div class="panel">

      <table id="users-table">
        <thead>
          <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Clients</th>
            <th>Administrator?</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do | user | %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.first_name %></td>
            <td><%= user.middle_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.clients.size %></td>
            <td><%= user.is_admin ? "Yes" : "No" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>