<% content_for :title, "Users" %>

<div class="row text-center">
  <div class="small-12 columns">

    <h1>All Users</h1>
    <hr />
    <div class="panel">
      
      <table id="users-table" class="responsive no-wrap">
        <thead>
          <tr>
            <th class="all">Email</th>
            <th class="desktop">First Name</th>
            <th class="desktop">Last Name</th>
            <th class="min-tablet-p" width="100">Clients</th>
            <th class="min-tablet-l" width="120">Delete</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do | user | %>
          <tr>
            <td>
              <%= link_to user do %>
                <%= user.email %>
              <% end %>
            </td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.clients.active.size %></td>
            <td>
              <%= link_to disperse_path user do %>
                <i class="fa fa-trash"></i>&emsp;Delete
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to new_user_path, class: "button" do %>
        <i class="fa fa-plus"></i>&emsp;New User
      <% end %>

    </div>
  </div>
</div>
